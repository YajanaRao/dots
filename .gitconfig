# Git configuration - shared across machines
# Machine-specific config (email) goes in ~/.gitconfig.local

[core]
	pager = delta

[interactive]
	diffFilter = delta --color-only

[delta]
	navigate = true

[merge]
	conflictStyle = zdiff3

[diff]
	colorMoved = default

[push]
	default = simple
	followTags = true

[pull]
	rebase = true

[init]
	defaultBranch = main

[alias]
	# Common shortcuts
	st = status -sb
	co = checkout
	br = branch
	ci = commit
	unstage = reset HEAD --
	last = log -1 HEAD
	lg = log --oneline --graph --decorate --all

# Include machine-specific config (email, etc)
# Create this file with: echo '[user]\n\temail = your@email.com' > ~/.gitconfig.local
[include]
	path = ~/.gitconfig.local

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
